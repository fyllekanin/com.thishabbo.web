{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "types": [
            "node"
        ],
        "alwaysStrict": true,
        "baseUrl": "./",
        "paths": {
            "core/*": [
                "app/core/*"
            ],
            "shared/*": [
                "app/shared/*"
            ]
        }
    },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
