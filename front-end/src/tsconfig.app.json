{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "types": [
            "node"
        ],
        "alwaysStrict": true,
        "baseUrl": "./",
        "paths": {
            "core/*": [
                "app/core/*"
            ],
            "shared/*": [
                "app/shared/*"
            ]
        }
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}
